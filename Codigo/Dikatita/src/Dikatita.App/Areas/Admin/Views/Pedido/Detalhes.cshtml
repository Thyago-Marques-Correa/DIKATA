@model Dikatita.App.ViewModels.PedidoViewModel

@{
    ViewData["Title"] = $"Detalhes do Pedido";
}

<div class="container py-4">
    <h2 class="text-center mb-4">@ViewData["Title"]</h2>

    <div class="row justify-content-center">
        <div class="col-lg-10 col-md-12">
            <div class="card shadow-sm rounded-4 p-4">
                <div class="row align-items-center">
                    <div class="col-md-7">
                        <dl class="row">
                            <dt class="col-sm-4 fw-semibold">Nome do Cliente:</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.NomeCliente)</dd>

                            <dt class="col-sm-4 fw-semibold">Telefone do Cliente:</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.TelefoneCliente)</dd>

                            <dt class="col-sm-4 fw-semibold">CPF do Cliente:</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.CpfCliente)</dd>

                            <dt class="col-sm-4 fw-semibold">Data de Cadastro</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.DataCadastro)</dd>
                        </dl>
                        <div class="align-items-center">
                            <partial name="_ItensPedido"/>
                        </div>
                        @* <div class="d-flex justify-content-between mt-4"> *@
                        @*     <a class="btn btn-danger btn-sm" data-toggle="tooltip" data-placement="top" title="Detalhes" *@
                        @*        asp-area="Admin" asp-controller="Pedido" asp-action="Cancelar" asp-route-id="@Model.Id">Cancelar</a> *@
                        @* </div> *@
                        <div class="d-flex justify-content-between mt-4">
                            <a class="btn btn-outline-secondary rounded-pill px-4" href="javascript:window.history.back();">
                                Voltar
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
