@using Microsoft.AspNetCore.Mvc.TagHelpers
@model Dikatita.App.ViewModels.EdicaoPedidoViewModel

@{
    ViewData["Title"] = "Edição de Produto";
}

<div class="container py-4">
    <h2 class="text-center mb-4">@ViewData["Title"]</h2>
    <hr/>

    <div class="row justify-content-center">
        <div class="col-lg-10 col-md-12">
            <div class="card shadow-sm rounded-4 p-4">
                <div class="row align-items-center">
                    <div class="col-md-7">
                        <dl class="row">
                            <dt class="col-sm-4 fw-semibold">Nome do Cliente:</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.NomeCliente)</dd>

                            <dt class="col-sm-4 fw-semibold">Telefone do Cliente:</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.TelefoneCliente)</dd>

                            <dt class="col-sm-4 fw-semibold">CPF do Cliente:</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.CpfCliente)</dd>

                            <dt class="col-sm-4 fw-semibold">Data de Cadastro</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.DataCadastro)</dd>
                        </dl>
                        <form asp-action="Editar" enctype="multipart/form-data" method="post">
                            <input type="hidden" asp-for="Id"/>
                            <label asp-for="Status">Escolha o Status: </label>
                            <select class="form-select" asp-for="Status" id="status-pedido">
                                <option value="0">Ativo</option>
                                <option value="1">Cancelado</option>
                                <option value="2">Pago</option>
                                <option value="3">Concluído</option>
                            </select>
                            <br><br>
                            <div class="d-flex justify-content-between mt-4">
                                <input type="submit" value="Salvar" class="btn btn-success rounded-pill px-4"/>
                                <a href="javascript:window.history.back();"
                                   class="btn btn-outline-secondary rounded-pill px-4">
                                    Voltar
                                </a>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

