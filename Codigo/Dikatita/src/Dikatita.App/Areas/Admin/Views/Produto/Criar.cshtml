@model ProdutoViewModel

@{
    ViewData["Title"] = "Novo Produto";
}

<div class="container py-4">
    <h1 class="mb-4 text-center">@ViewData["Title"]</h1>
    <hr />

    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10 col-sm-12">
            <div class="card shadow-sm rounded-4 p-4">
                <form asp-action="Criar" enctype="multipart/form-data">
                    <vc:summary></vc:summary>

                    <div class="form-group mb-3">
                        <label asp-for="Nome" class="form-label fw-semibold"></label>
                        <input asp-for="Nome" class="form-control" placeholder="Digite o nome do produto" />
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="ImagemUpload" class="form-label fw-semibold"></label>
                        <div class="custom-file">
                            <input type="file" class="custom-file-input" asp-for="ImagemUpload" id="ImagemUpload" />
                            <label class="custom-file-label" for="ImagemUpload">Escolher imagem</label>
                        </div>
                        <span asp-validation-for="ImagemUpload" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Descricao" class="form-label fw-semibold"></label>
                        <textarea asp-for="Descricao" class="form-control" rows="5" placeholder="Descrição detalhada do produto"></textarea>
                        <span asp-validation-for="Descricao" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Valor" class="form-label fw-semibold"></label>
                            <input asp-for="Valor" class="form-control" placeholder="Valor R$" />
                            <span asp-validation-for="Valor" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="QuantidadeEstoque" class="form-label fw-semibold"></label>
                            <input asp-for="QuantidadeEstoque" class="form-control" placeholder="Quantidade em estoque" />
                            <span asp-validation-for="QuantidadeEstoque" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-check mb-4">
                        <input class="form-check-input" asp-for="Ativo" id="ativoCheckbox" />
                        <label class="form-check-label" for="ativoCheckbox">
                            @Html.DisplayNameFor(model => model.Ativo)
                        </label>
                    </div>

                    <div class="d-flex justify-content-between">
                        <button type="submit" class="btn btn-success rounded-pill px-4">
                            Cadastrar
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4">
                            Voltar
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $("#ImagemUpload").change(function () {
            let fileName = $(this).val().split("\\").pop();
            $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
        });
    </script>
}.