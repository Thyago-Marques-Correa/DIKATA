@page
@model LoginModel

@{
    ViewData["Title"] = "Login";
}

<div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow p-4 rounded-3" style="max-width: 400px; width: 100%; background-color: #f6fbf7;">
        <h2 class="text-center text-success mb-3">Login</h2>

        <form id="account" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <div class="mb-3">
                <label asp-for="Input.Email" class="form-label">E-mail</label>
                <input asp-for="Input.Email" class="form-control rounded-pill p-2" autocomplete="username" placeholder="Digite seu e-mail" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Input.Password" class="form-label">Senha</label>
                <input asp-for="Input.Password" class="form-control rounded-pill p-2" autocomplete="current-password" type="password" placeholder="Digite sua senha" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <button type="submit" class="btn w-100 text-white rounded-pill p-2" style="background-color: #2a7c67;">
                Entrar
            </button>

            <div class="text-center mt-3">
                <a id="forgot-password" asp-page="./ForgotPassword" class="text-success text-decoration-none">Esqueci minha senha</a>
            </div>
            <div class="text-center mt-2">
                <span>Não tem uma conta? </span>
                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-success text-decoration-none">Cadastre-se</a>
            </div>

            <div class="text-center mt-3">
                <a href="javascript:history.back()" class="btn btn-secondary rounded-pill px-4">Voltar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
