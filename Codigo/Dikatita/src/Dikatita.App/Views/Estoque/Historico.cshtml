@model Dikatita.App.Models.ProdutoViewModel

@{
    ViewData["Title"] = "Histórico de Movimentações";
}

<h2>Histórico de Movimentações - @Model.Nome</h2>

<div class="row">
    <div class="col-md-12">
        <dl class="row">
            <dt class="col-sm-2">Produto:</dt>
            <dd class="col-sm-10">@Model.Nome</dd>

            <dt class="col-sm-2">Estoque Atual:</dt>
            <dd class="col-sm-10">@Model.QuantidadeEstoque</dd>
        </dl>
    </div>
</div>

<hr />

<h4>Movimentações</h4>

@if (Model.Movimentacoes != null && Model.Movimentacoes.Any())
{
    <table class="table table-hover">
        <thead class="thead-dark">
            <tr>
                <th>Data</th>
                <th>Tipo</th>
                <th>Quantidade</th>
                <th>Observação</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Movimentacoes)
            {
                <tr>
                    <td>@item.DataMovimentacao.ToString("dd/MM/yyyy HH:mm")</td>
                    <td>
                        @if (item.TipoMovimentacao == "Entrada")
                        {
                            <span class="badge badge-success">@item.TipoMovimentacao</span>
                        }
                        else
                        {
                            <span class="badge badge-danger">@item.TipoMovimentacao</span>
                        }
                    </td>
                    <td>@item.Quantidade</td>
                    <td>@item.Observacao</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Não há movimentações para este produto.</p>
}

<div>
    <a class="btn btn-info" asp-action="Index">Voltar para a Lista</a>
</div> 