@model IEnumerable<Dikatita.App.Models.ProdutoViewModel>

@{
    ViewData["Title"] = "Gerenciamento de Estoque";
}

<h1 class="text-center mb-4">@ViewData["Title"]</h1>

@if (TempData["Sucesso"] != null)
{
    <div class="alert alert-success mb-4">
        <button type="button" class="close" data-dismiss="alert">×</button>
        <h4><i class="icon fa fa-check"></i> Sucesso!</h4>
        @TempData["Sucesso"]
    </div>
}

<p class="text-center mb-4">
    <a class="btn btn-success" asp-action="AjusteEstoque">Nova Movimentação</a>
</p>

<div class="table-responsive">
    <table class="table table-hover text-center">
        <thead class="thead-dark">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.QuantidadeEstoque)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Valor)
                </th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.QuantidadeEstoque)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Valor)
                    </td>
                    <td>
                        <a class="btn btn-info" asp-action="Historico" asp-route-id="@item.Id">
                            <span class="fa fa-search"></span> Histórico
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
