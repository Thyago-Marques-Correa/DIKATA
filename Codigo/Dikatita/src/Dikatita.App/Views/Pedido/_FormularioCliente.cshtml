@model Dikatita.App.ViewModels.PedidoViewModel

<form asp-action="FinalizarPedido" method="post" id="formCliente">
    <div class="form-group">
        <label asp-for="NomeCliente">Nome</label>
        <input asp-for="NomeCliente" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="TelefoneCliente">Telefone</label>
        <input asp-for="TelefoneCliente" class="form-control" id="TelefoneCliente" required />
    </div>
    <div class="form-group">
        <label asp-for="CpfCliente">CPF</label>
        <input asp-for="CpfCliente" class="form-control" id="CpfCliente" required />
    </div>

    <button type="submit" class="btn btn-primary mt-3">Finalizar Pedido</button>
</form>