@model IEnumerable<ProdutoViewModel>

<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {
            if (item.Ativo != false && item.QuantidadeEstoque != 0)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100">
                        <img src="~/uploadImagens/@item.Imagem" alt="@item.Imagem" class="card-img-top" style="height: 200px; object-fit: cover;">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@item.Nome</h5>
                            <p class="card-text font-weight-bold">@item.Valor.ToString("C")</p>
                            <div class="mt-auto">
                                <a class="btn btn-info btn-sm" data-toggle="tooltip" data-placement="top" title="Detalhes"
                                   asp-controller="Catalogo" asp-action="Detalhes" asp-route-id="@item.Id">Detalhes</a>
                                <form method="post" asp-page-handler="AdicionarAoCarrinho" class="mt-2">
                                    <input type="hidden" name="produtoId" value="@item.Id" />
                                    <button type="submit" class="btn btn-warning btn-sm disabled">Adicionar ao Carrinho</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>
