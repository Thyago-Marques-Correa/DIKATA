@model Dikatita.App.ViewModels.PedidoViewModel

<form asp-controller="Pedido" asp-action="FinalizarPedido" method="post" id="formCliente">
    <div class="form-group mb-1">
        <label>Nome</label>
        <input asp-for="NomeCliente" class="form-control" required />
    </div>
    <div class="form-group mb-1">
        <label>Telefone</label>
        <input asp-for="TelefoneCliente" class="form-control" required />
    </div>
    <div class="form-group mb-1">
        <label>CPF</label>
        <input asp-for="CpfCliente" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-primary mt-3">Salvar Pedido</button>
</form>