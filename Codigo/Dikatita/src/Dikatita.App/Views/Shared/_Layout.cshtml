@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - DIKATATITA</title>
    <link rel="icon" href="~/xicara-de-cafe.png" type="image/png">

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css"/>

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Bungee+Shade&family=Lobster&family=Rochester&display=swap"
          rel="stylesheet">
    <style>
        .logo {
            color: #00B4D8;
            font-size: 3rem;
            font-weight: 500;
            font-family: "Lobster", sans-serif;
        }

        .logo a {
            text-decoration: none;
            color: inherit;
        }
    </style>
</head>
<body>

<nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom shadow-sm">
    <div class="container">

        <h1 class="logo">
            <a asp-area="" asp-controller="Home" asp-action="Index" style="text-decoration: none; color: inherit;">Dikatita</a>
        </h1>


        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
            <ul class="navbar-nav align-items-center">

                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Catalogo" asp-action="GerarPdfCatalogo"
                       title="Catálogo">
                        <i class="fas fa-book"></i>
                    </a>
                </li>

                @if (!SignInManager.IsSignedIn(User))
                {
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Carrinho" asp-action="Index" title="Carrinho">
                            <i class="fas fa-shopping-cart"></i>
                        </a>
                    </li>
                }

                @if (SignInManager.IsSignedIn(User))
                {
                    if (User.IsInRole("Admin") || User.IsInRole("Supervisor"))
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown"
                               aria-expanded="false">
                                Administração
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-area="Admin" asp-controller="Produto"
                                       asp-action="Index"><i class="fas fa-box-open me-2"></i>Produtos</a></li>
                                <li><a class="dropdown-item" asp-area="Admin" asp-controller="Pedido"
                                       asp-action="Index"><i class="fas fa-box me-2"></i>Pedidos</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Estoque" asp-action="Index"><i
                                            class="fas fa-warehouse me-2"></i>Ajuste de Estoque</a></li>
                            </ul>
                        </li>
                    }

                    if (User.IsInRole("Admin"))
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Admin" asp-controller="Role" asp-action="Index"
                               title="Permissões">
                                <i class="fas fa-user-shield"></i>
                            </a>
                        </li>
                    }


                    <li class="nav-item">
                        <form method="post" asp-area="Identity" asp-page="/Account/Logout" class="d-inline">
                            <button type="submit" class="nav-link btn btn-link text-dark p-0" title="Sair">
                                <i class="fas fa-sign-out-alt"></i>
                            </button>
                        </form>
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        <a class="nav-link" asp-area="Identity" asp-page="/Account/Login" title="Acesso Corporativo">
                            <i class="fas fa-sign-in-alt"></i>
                        </a>
                    </li>
                }
            </ul>
        </div>
    </div>
</nav>

<div class="container mt-4">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="footer mt-auto py-3 bg-light">
    <div class="container text-center">
        <p class="mb-1">&copy; 2025 DIKATATITA - Todos os direitos reservados.</p>
        <p class="mb-0">
            <a asp-area="" asp-controller="Home" asp-action="Contatos">Fale Conosco</a> |
            <a asp-area="" asp-controller="Home" asp-action="Privacy">Termos de Uso</a>
        </p>
    </div>
</footer>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.5.1/jspdf.umd.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/html2canvas/1.4.1/html2canvas.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>

<script>
    document.getElementById("btn-gerar-pdf")?.addEventListener("click", function () {
        const container = document.getElementById("produtos-container");

        const clone = container.cloneNode(true);

        const botoes = clone.querySelectorAll(".adicionar-ao-carrinho, .btn-info");
        botoes.forEach(btn => btn.remove());

        html2canvas(clone).then(canvas => {
            const imgData = canvas.toDataURL('image/png');
            const pdf = new jspdf.jsPDF({
                orientation: 'portrait',
                unit: 'mm',
                format: 'a4'
            });

            const width = pdf.internal.pageSize.getWidth();
            const height = canvas.height * width / canvas.width;

            pdf.addImage(imgData, 'PNG', 0, 0, width, height);
            pdf.save("Lista-de-Produtos.pdf");
        });
    });
</script>

@await RenderSectionAsync("Scripts", required: false)
</body>
</html>